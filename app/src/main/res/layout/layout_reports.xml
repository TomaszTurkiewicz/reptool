<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutLayoutReport"
    android:layout_margin="@dimen/margin">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateAndTimeLinearLayoutLayoutReport"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateLayoutReport"
            android:layout_marginEnd="@dimen/marginHalf"
            android:text="@string/day"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeInLayoutReport"
            android:layout_marginHorizontal="@dimen/marginHalf"
            android:text="@string/startTime"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeOutLayoutReport"
            android:layout_marginStart="@dimen/marginHalf"
            android:text="@string/endTime"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jobNumberAndNameLinearLayoutLayoutReport"
        app:layout_constraintTop_toBottomOf="@id/dateAndTimeLinearLayoutLayoutReport"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jobNumberLayoutReport"
            android:text="@string/job_number"
            android:layout_marginEnd="@dimen/marginHalf"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameLayoutReport"
            android:layout_marginStart="@dimen/marginHalf"
            android:text="@string/name"/>
    </LinearLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jobNumberAndNameLinearLayoutLayoutReport"
        android:id="@+id/addressLayoutReport"
        android:text="@string/jobAddress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addressLayoutReport"
        android:id="@+id/descriptionLayoutReport"
        android:text="@string/jobDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>