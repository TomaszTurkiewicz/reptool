<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/manager_layout">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/managerNameLayoutManager"
        android:textSize="@dimen/TextSize"
        android:layout_margin="8dp"
        android:layout_weight="@integer/ManagerLayoutNameWeight"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/managerSurnameLayoutManager"
        android:textSize="@dimen/TextSize"
        android:layout_margin="8dp"
        android:layout_weight="@integer/ManagerLayoutSurnameWeight"/>




</LinearLayout>