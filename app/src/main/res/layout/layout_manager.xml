<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/manager_layout"
    android:layout_margin="@dimen/marginHalf">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/managerNameLayoutManager"
        android:textSize="@dimen/TextSize"
        android:layout_margin="8dp"
        android:text="@string/name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/managerSurnameLayoutManager"
        android:textSize="@dimen/TextSize"
        android:layout_margin="8dp"
        android:text="@string/surname"
        android:layout_toEndOf="@id/managerNameLayoutManager"/>

    <ImageView
        android:id="@+id/imageEditLayoutManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/managerSurnameLayoutManager"
        android:contentDescription="@string/edit_manager" />

    <ImageView
        android:id="@+id/imageDeleteLayoutManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/delete_manager" />

</RelativeLayout>